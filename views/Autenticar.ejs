<% include /header %>
        <div class="jumbotron">
            <div class="container">
                <h2>Autenticar</h2>
            </div>
        </div>
	    <div class="container">
            <form id="RegisterForm" class="form-horizontal" method="post" action="/Pessoa/Autenticar">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Username ou Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="pessoa[email]" class="col-md-3" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="pessoa[password]" class="col-md-3" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Entrar" class="btn btn-primary ">
						<label class="control-label">
								<%=message%>
						</label>
                    </div>
					
                </div>
            </form>
        </div>
<% include /footer %>