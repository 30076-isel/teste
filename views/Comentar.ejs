<% include /header %>
        <div class="jumbotron">
            <div class="container">
                <h2>Comentar</h2>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="well well-sm">
                        <form class="form-horizontal" action="/Anuncio/Comentar/<%=idAnuncio%>" method="post">
							<legend class="text-center">Comentar</legend>

							<!-- Titulo input-->
							<div class="form-group">
								<label class="col-md-3 control-label" for="name">Titulo</label>
								<div class="col-md-9">
									<input id="titulo" name="comentario[titulo]" type="text" placeholder="Titulo" class="form-control">
								</div>
							</div>

							<!-- Message body -->
							<div class="form-group">
								<label class="col-md-3 control-label" for="texto">Coment&#225;rio</label>
								<div class="col-md-9">
									<textarea class="form-control" id="texto" name="comentario[texto]" placeholder="Escreva aqui o seu coment&#225;rio..." rows="5"></textarea>
								</div>
							</div>

							<!-- Form actions -->
							<div class="form-group">
								<div class="col-md-12 text-right">
									<button type="submit" class="btn btn-primary btn-lg">Adicionar</button>
								</div>
							</div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<% include /footer %>