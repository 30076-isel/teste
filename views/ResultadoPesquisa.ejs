

<div class="container marketing">
    <div class="row placeholders">
        <%if(anuncios.length > 0) {%>
            <% for(var i = 0;i<anuncios.length;++i){%>
			
                <div class="col-xs-6 col-sm-3 placeholder">
				
                    <img class="img-circle car-image" src="<%=anuncios[i].imagem%>" alt="Generic placeholder image">
                    <h2>Anuncio
                        <%if(anuncios[i].terminado){%>
                            <span class="glyphicon glyphicon-warning-sign" title="Expirado"></span>
                        <%}%>
                    </h2>
                    <h3><%=anuncios[i].titulo%></h3>
                    <p><b>Pre&#231;o:</b><%=anuncios[i].preco%>&#8364; - <b>Ano:</b><%=anuncios[i].ano%> -
                        <b>Anunciante:</b> <%=anuncios[i].anunciante%></p>
                    <div class="action text-center">
                        <%if(page=='perfil'){%>
                        <div class="row">
                            <div class="col-md-2">
                                <a href="/Anuncio/Detalhe/<%=anuncios[i].id%>" class="btn btn-success btn-xs" title="Ver">
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
						    </div>


                            <div class="col-md-2">
                                <a href="/Anuncio/Editar/<%=anuncios[i].id%>" class="btn btn-primary btn-xs" title="Editar">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </div>
                            <div class="col-md-2">
                                <form class="form-inline" action="/Anuncio/Remover/<%=anuncios[i].id%>" method="post">
                                    <button class="btn btn-danger btn-xs" title="Apagar">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <%}else{%>
                        <div class="col-md-2">
                            <a href="/Anuncio/Detalhe/<%=anuncios[i].id%>" class="btn btn-success btn-xs" title="Ver">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                        </div>
                        <%}%>
                    </div>
                </div>
            <%}%>
        <%}%>
    </div>
    <%if(anuncios.length>0){%>
        <div class="text-center">
            <div class="pagination">
                <ul id="pager" class="pager">
                    <li><a name="<%=(pagina==1)?1:(parseInt(pagina)-1)%>" href="">Anterior</a></li>
                    <%for(var j = 1;j<=numeroPaginas;++j){%>
                        <li class="active">
                            <a name="<%=j%>" href=""><%=j%></a>
                        </li>
                    <%}%>
                    <li><a name="<%=(pagina==numeroPaginas)?numeroPaginas:(parseInt(pagina)+1)%>" href="">Proxima</a></li>
			   </ul>
            </div>
        </div>
    <%}%>
    </div>
